<% provide(:title, 'My Lessons') %>
<h1>My Lessons</h1>

<br><br><br>

<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Day</th>
      <th>Time</th>
      <th>Location</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @my_lessons.each do |private_lesson| %>
      <tr>
        <% if private_lesson.participants.first %>
          <td>
            <%= link_to private_lesson.participants.first.last_name, private_lesson %>
          </td>
          <td>
            <%= link_to private_lesson.participants.first.first_name, private_lesson %>
          </td>
          <td><%= private_lesson.participants.first.age %></td>
          <td><%= private_lesson.participants.first.sex %></td>
        <% end %>
        <td><%= private_lesson.day %></td>
        <td><%= private_lesson.time %></td>
        <td>
          <% if private_lesson.preferred_location %>
            <%= Location.find_by_id(private_lesson.preferred_location).name %>
          <% end %>
        </td>
        <td><%= private_lesson.created_at.strftime('%-m/%-d/%Y') %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
