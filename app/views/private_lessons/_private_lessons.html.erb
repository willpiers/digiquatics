<div class='table-responsive'>

  <table class='table table-hover table-condensed'>
    <thead>
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Age</th>
        <th>Sex</th>
        <th>Instructor Gender Preference</th>
        <th>Day</th>
        <th>Time</th>
        <th>Location</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @private_lessons.each do |private_lesson| %>
        <tr>
          <td><%= private_lesson.participants.each do |participant|
                    link_to participant.last_name, private_lesson
                  end %></td>
          <td><%= private_lesson.participants.each do |participant|
                    link_to participant.first_name, private_lesson
                  end %></td>
          <td><%= private_lesson.participants.each do |participant|
                    participant.age
                  end %></td>
          <td><%= private_lesson.participants.each do |participant|
                    participant.sex
                  end %></td>
          <td><%= private_lesson.participants.each do |participant|
                    participant.instructor_gender
                  end %></td>
          <td><%= private_lesson.day %></td>
          <td><%= private_lesson.time %></td>
          <td>
            <% if Location.find_by_id(private_lesson.preferred_location) %>
              <%= Location.find_by_id(private_lesson.preferred_location).name %>
            <% end %>
          </td>
          <td><%= private_lesson.created_at.strftime('%-m/%-d/%Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
