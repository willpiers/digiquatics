<% provide(:title, @private_lesson.first_name) %>

<h1><%= @private_lesson.first_name + " " + @private_lesson.last_name %></h1>

<ul class = "pull-right">
<%= bootstrap_form_for @private_lesson do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Claim Lesson"  %>
<% end %>
</ul>

<br> <br>

<div class="table-responsive">
		<table class="table table-bordered table-condensed" >
			<h4> Parent Information </h4>
				<tr>
					 <th style="width:25%"> First Name </th>
					<td> <%= @private_lesson.parent_first_name %> </td>
				</tr>
				<tr>
					<th> Last Name </th>
					<td> <%= @private_lesson.parent_last_name %> </td>
				</tr>
				<tr>
					<th> Phone Number</th>
					<td> <%= @private_lesson.phone_number %> </td>
				</tr>
				<tr>
					<th> Email </th>
					<td> <%= @private_lesson.email %> </td>
				</tr>
				<tr>
					<th> Preferred Contact Method </th>
					<td> <%= @private_lesson.contact_method %> </td>
				</tr>
		</table>

		<table class="table table-bordered" >
			<h4> Student Information </h4>
				<tr>
					 <th style="width:25%"> First Name </th>
					<td> <%= @private_lesson.first_name %> </td>
				</tr>
				<tr>
					<th> Last Name </th>
					<td> <%= @private_lesson.last_name %> </td>
				</tr>
				<tr>
					<th> Gender</th>
					<td> <%= @private_lesson.sex %> </td>
				</tr>
				<tr>
					<th> Age </th>
					<td> <%= @private_lesson.age %> </td>
				</tr>
		</table>

	<table class="table table-bordered" >
		<h4> Preferences </h4>
			<tr>
				<th style="width:25%"> Instructor Gender </th>
				<td> <%= @private_lesson.instructor_gender %> </td>
			</tr>
			<tr>
				<th> Special Requests </th>
				<td> <%= @private_lesson.notes %> </td>
			</tr>
	</table>

	<table class="table table-bordered" >
		<h4> Lesson Request </h4>
			<tr>
				<th style="width:25%"> Number Lessons </th>
				<td> <%= @private_lesson.number_lessons %> </td>
			</tr>
	</table>

	<%if current_user.admin? %>
	  <%= link_to 'Edit', edit_private_lesson_path(@private_lesson) %>
	<% else %>
	<% end %>
</div>
