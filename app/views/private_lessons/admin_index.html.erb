<div ng-app='digiquatics'>
  <div ng-controller='AdminPrivateLessonsCtrl'>
    <% provide(:title, 'Open Private Lessons') %>
    <h1 class='cross_platform_header'>Open Private Lessons Mangement</h1>
    <div class='row'>
      <dq-location></dq-location>
      <div class='visible-xs'><br></div>
      <dq-search></dq-search>
      <div class='visible-xs'><br></div>
      <div class='col-md-3'></div>
      <div class='col-md-4 pull-right'>
        <div class='btn-group pull-right'>
          <%= link_to new_account_private_lesson_path(account_id: current_account.id),
              class:'btn btn-sm btn-primary' do %>
            <i class='fa fa-plus fa-lg'></i> New Lesson
          <% end %>
          <%= link_to completed_admin_index_path,
              class:'btn btn-sm btn-danger' do %>
            <i class='fa fa-check-square fa-lg'></i> Completed
          <% end %>
          <%= link_to account_private_lessons_path(account_id: current_user.account_id),
              class:'btn btn-sm btn-warning' do %>
            <i class='fa fa-list fa-lg'></i> Queue
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div style="font-size: 75%" class='hidden-xs'>
      <br>
        <p>
          <img src='/images/reddot.png' alt='red' height='10px' width='10px' /> 8+ Days
          <img src='/images/yellowdot.png' alt='yellow' height='10px' width='10px' /> 4-7 Days
          <img src='/images/greendot.png' alt='green' height='10px' width='10px' /> 1-3 Days
       </p>
      </div>
    <%= render 'admin_private_lessons' %>
  </div>
</div>
