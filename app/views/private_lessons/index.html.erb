<div ng-app='digiquatics'>
  <div ng-controller='PrivateLessonsCtrl'>
    <% provide(:title, 'Private Lessons Queue') %>
    <h1>Private Lessons Queue</h1>
    <br><br>
    <div class='row'>
      <dq-search></dq-search>
      <div class='col-md-3'>
        <select ng-model='locationFilter' class='form-control'>
          <option value=''>All Locations</option>
          <option ng-repeat='location in locations' value='{{location.name}}'>{{location.name}}</option>
        </select>
      </div>
      <div class='col-md-3'></div>
      <div class='col-md-4'>
        <div class='btn-group'>
          <%= link_to 'New Private Lesson',
            new_account_private_lesson_path(account_id: current_account.id),
              class: 'btn btn-primary btn-sm',
              role: 'button' %>
          <%if current_user.admin? %>
            <%= link_to 'Private Lessons Mangement', admin_index_path,
              class: 'btn btn-success btn-sm', role: 'button' %>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div style="font-size: 75%">
      <br>
        <p>
          <img src="/images/reddot.png" alt="red" height="10px" width="10px" /> 8+ Days
          <img src="/images/yellowdot.png" alt="yellow" height="10px" width="10px" /> 4-7 Days
          <img src="/images/greendot.png" alt="green" height="10px" width="10px" /> 1-3 Days
       </p>
      </div>
    <%= render 'private_lessons' %>
  </div>
</div>
