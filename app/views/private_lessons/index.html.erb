<% provide(:title, 'Private Lessons Queue') %>
<h1>Private Lessons Queue</h1>

<div class='row'>

  <div class='col-md-7'></div>

  <div class='col-md-5'>
    <br><br>
    <div class='btn-group'>
      <%= link_to 'New Private Lesson', new_private_lesson_path,
        class: 'btn btn-primary btn-sm', role: 'button' %>
      <%= link_to 'Export CSV', private_lessons_path(format: 'csv'),
        class: 'btn btn-warning btn-sm', role: 'button' %>
      <%if current_user.admin? %>
        <%= link_to 'Manage Private Lessons', admin_index_path,
          class: 'btn btn-success btn-sm', role: 'button' %>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= render 'private_lessons' %>
