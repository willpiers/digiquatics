<div ng-app='digiquatics'>
  <div ng-controller='PrivateLessonsCtrl'>
    <% provide(:title, 'Private Lessons Queue') %>
    <h1 class='cross_platform_header'>Private Lessons Queue</h1>
    <div class='row'>
      <dq-location></dq-location>
      <div class='visible-xs'><br></div>
      <dq-search></dq-search>
      <div class='visible-xs'><br></div>
      <div class='col-md-3'></div>
      <div class='col-md-4 pull-right'>
        <div class='btn-group pull-right'>
          <%= link_to new_account_private_lesson_path(account_id: current_account.id),
              class:'btn btn-sm btn-primary' do %>
            <i class='fa fa-plus fa-lg'></i> Add Lesson
          <% end %>
          <% if current_user.admin? %>
            <%= link_to admin_index_path,
                class:'btn btn-sm btn-danger' do %>
              <i class='fa fa-cogs fa-lg'></i> Management
            <% end %>
          <% end %>
          <%= link_to private_lesson_stats_path,
              class:'btn btn-sm btn-success' do %>
            <i class='fa fa-bar-chart-o fa-lg'></i> Statistics
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div style='font-size: 75%' class='hidden-xs'>
      <br>
        <p>
          <img src='/images/reddot.png' alt='red' height='10px' width='10px' /> 8+ Days
          <img src='/images/yellowdot.png' alt='yellow' height='10px' width='10px' /> 4-7 Days
          <img src='/images/greendot.png' alt='green' height='10px' width='10px' /> 1-3 Days
       </p>
      </div>
    <%= render 'private_lessons' %>
  </div>
</div>
