<table class='table table-hover' >
  <thead>
    <tr>
      <th>
        <a href="" ng-click="predicate.value = 'preferred_location'; reverse=!reverse">
        Student</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'preferred_location'; reverse=!reverse">
        Age</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'created_at'; reverse=!reverse">
        Sex</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'created_at'; reverse=!reverse">
        Day</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'created_at'; reverse=!reverse">
        Time</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'created_at'; reverse=!reverse">
        Location</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'created_at'; reverse=!reverse">
        Claimed</a>
      </th>
      <th>
        <a href="" ng-click="predicate.value = 'created_at'; reverse=!reverse">
        Completed</a>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat='lesson in myPrivateLessons | orderBy:predicate.value:reverse | filter:locationFilter | filter:search'>
      <td>
        <div ng-repeat='participant in lesson.participants'>
          <a ng-href='#'>
            {{participant.last_name}}, {{participant.first_name}} <br/>
          </a>
        </div>
      </td>
      <td>
        <div ng-repeat='participant in lesson.participants'>
          {{participant.age}}
        </div>
      </td>
      <td>
        <div ng-repeat='participant in lesson.participants'>
          {{participant.sex}}
        </div>
      </td>
      <td>
        {{lesson.day}}
      </td>
      <td>
        {{lesson.time}}
      </td>
      <td class='hidden-xs'>{{lesson.location.name}}</td>
      <td>
        {{lesson.claimed_on | date:'M/d/yy h:mm a'}}
      </td>
      <td>
        {{lesson.completed_on | date:'M/d/yy h:mm a'}}
      </td>
    </tr>
  </tbody>
</table>
