<% provide(:title, 'Sign In') %>

<div class='box-position'>
  <center>
    <img src='/images/water.png' alt='digi_logo' height='100px' width='100px'/>
    <br><br>
  </center>
  <div class='fixwidth well shadow-effect'>
    <%= bootstrap_form_for(resource, as: resource_name,
                           url: session_path(resource_name)) do |f| %>
      <center><h4>Welcome to DigiQuatics</h4></center><hr>
      <%= f.email_field :email, autofocus: true, hide_label: :true,
                        placeholder: 'Email' %>
      <%= f.password_field :password, hide_label: :true,
                        placeholder: 'Password' %>

      <%= f.submit 'Sign in', class: 'btn btn-block btn-primary' %>
    <% end %>
    <div class='hidden-xs'>
      <hr>
      <%= render 'devise/shared/links' %>
    </div>
    <div class='visible-xs'>
      <br>
      <center>
        <p class='copyright'>
          <i class='fa fa-copyright'></i>
          2013-2014 Affektive LLC
        </p>
      </center>
    </div>
  </div>
</div>
