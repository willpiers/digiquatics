<% provide(:title, 'Password Reset') %>

<div class='box-position'>
  <center>
    <img src='/images/water.png' alt='red' height='100px' width='100px'/>
    <br><br>
  </center>
  <div class='fixwidth box'>
    <%= bootstrap_form_for(resource,
                           :as => resource_name,
                           :url => password_path(resource_name),
                           :html => { :method => :put },
                           style: :horizontal,
                           left: 'col-sm-4',
                           right: 'col-sm-8') do |f| %>
      <%= devise_error_messages! %>
      <center><h4>Change your password</h4></center><hr>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, :autofocus => true %>

      <%= f.password_field :password_confirmation %>
      <center>
        <%= f.submit 'Change my password', class: 'devise-button' %>
      </center>
    <% end %>
    <div class='visible-xs'>
      <br>
      <center>
        <p style='color: #C0C0C0'>&#169;2013-2014 Affektive Limited</p>
      </center>
    </div>
  </div>
</div>
