<%= content_tag(:legend, legend) if legend %>
<div class='userform well shadow-effect'>
  <%= bootstrap_form_for(@certification_name,
    style: :horizontal, left: 'col-sm-4', right: 'col-sm-8') do |f| %>
    <%= render 'shared/required' %>
    <%= f.text_field :name, label: 'Name *' %>
      <% if @certification_name.new_record?() %>
        <button type='submit' class='btn btn-block btn-primary'>
          <i class='fa fa-check'></i> Submit Certification
        </button>
      <% else %>
        <button type='submit' class='btn btn-block btn-primary'>
          <i class='fa fa-refresh'></i> Update Certification
        </button>
      <% end %>
  <% end %>
</div>
</div>
