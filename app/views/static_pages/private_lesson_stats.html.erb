<% provide(:title, 'Private Lesson Statistics') %>
<h1 class='cross_platform_header'>Private Lesson Statistics</h1>

<div class='pull-left'>
  <%= link_to account_private_lessons_path(account_id: current_user.account_id),
      class:'btn btn-default btn-circle' do %>
    <i class='fa fa-arrow-left fa-lg'></i>
  <% end %>
</div>
<br><br><br><br>

<table class='table table-bordered table-white shadow-effect'>
  <tr>
    <th>Metric</th>
    <th>Uncliamed</th>
    <th>Claimed</th>
    <th>Total</th>
  </tr>
  <tr>
    <th>All Locations</th>
    <th><%= @facade.unclaimed_total %></th>
    <th><%= @facade.claimed_total %></th>
    <th><%= @facade.total %></th>
  </tr>
</table>
<br>

<div class='shadow-effect'>
  <%= high_chart('private_lessons_graph', @private_lessons_graph) %>
</div>
