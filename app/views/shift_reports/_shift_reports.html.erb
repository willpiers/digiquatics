<% @shift_reports.each do |shift_report| %>

  <div class='panel panel-primary'>
    <div class='panel-heading'>
      <%= shift_report.date_stamp.strftime('%-m/%-d/%Y') %>
      <%= shift_report.time_stamp.strftime('%I:%M%p') %>
      -
      <%= Location.find(shift_report.location_id).name %>
    </div>

    <table class='table table-bordered table-condensed'  >
      <tr>
        <td width='150' align='center'>
          <div style = 'margin-left:5px; margin-top:5px;'>
            <%= image_tag User.find(shift_report.user_id).avatar.url,
              size: '100x100' %>
            <p> <%= User.find(shift_report.user_id).first_name %> </p>
            <p> <%= User.find(shift_report.user_id).last_name %> </p>
          </div>
        </td>
        <td>
          <div class='panel-body'><%= shift_report.post_content %></div>
        </td>
      </tr>
    </table>
    <div class="panel-footer">
      Report Filed: <%= boolean_to_words(shift_report.report_filed) %>
      <% if shift_report.attachment_front? %>
        <%= link_to '', shift_report.attachment_front.url,
        class: 'glyphicon glyphicon-list-alt' %>
      <% else %>
      <% end %>
      <% if shift_report.attachment_back? %>
        <%= link_to '', shift_report.attachment_back.url,
        class: 'glyphicon glyphicon-list-alt' %>
      <% else %>
      <% end %>
    </div>
  </div>
<% end %>

<br>
