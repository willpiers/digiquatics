<%= provide(:title, 'My Availability') %>
<div ng-app='digiquatics'>
  <div ng-controller='AvailabilityCtrl'>
    <h1 class='cross_platform_header'>My Availability</h1>
    <div class='hidden-xs'>
      <table class='table table-bordered print-schedule-font'>
        <thead>
          <tr>
            <th class='my_schedule_header' ng-repeat='day in days'>
              {{day.dayName}}
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td ng-repeat='day in days'>
              <div ng-repeat='availability in availabilities | orderBy:sortTime | filter: { day: day.dayNum }'>
                <%= render 'availability' %>
              </div>
              <div class='shift';
                ng-click="open(day.dayNum)"
                data-hover='Add Availability'>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class='visible-xs'>
      <table class='table table-bordered print-schedule-font' ng-repeat='day in days'>
        <thead>
          <tr>
            <th class='my_schedule_header'>
              {{day.dayName}}
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div ng-repeat="availability in availabilities | orderBy:sortTime | filter: { day: day.dayNum }">
                <%= render 'availability' %>
              </div>
              <button class='btn btn-default btn-xs btn-block' ng-click='open(day.dayNum)'>Add Availability</button>
            </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
