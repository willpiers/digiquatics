<div class='userform well'>
  <%= bootstrap_form_for(@skill_level,
    style: :horizontal, left: 'col-sm-4', right: 'col-sm-8') do |f| %>
    <%= content_tag(:legend, legend) if legend %>
    <%= render 'shared/required' %>
    <%= f.text_field :name %>
    <% if @skill_level.new_record?() %>
      <button type='submit' class='btn btn-block btn-primary'>
        <i class='fa fa-check'></i> Submit Skill Level
      </button>
    <% else %>
      <button type='submit' class='btn btn-block btn-primary'>
        <i class='fa fa-refresh'></i> Update Skill Level
      </button>
    <% end %>
  <% end %>
</div>
</div>
