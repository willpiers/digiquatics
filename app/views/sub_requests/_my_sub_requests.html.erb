<table class='table'>
  <thead>
    <tr>
      <th class='hidden-xs'>
        <a href="" ng-click="predicate.value = '-shift.position.name'; reverse=!reverse">
          Position
        </a>
        <span ng-show="thArrow(predicate.value, '-shift.position.name')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th class='hidden-xs'>
        <a href="" ng-click="predicate.value = '-starts_at'; reverse=!reverse">
          Shift Date
        </a>
        <span ng-show="thArrow(predicate.value, '-starts_at')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th class='hidden-xs'> Shift Time </th>
      <th class='visible-xs'>
        <a href="" ng-click="predicate.value = '-starts_at'; reverse=!reverse">
          Shift
        </a>
        <span ng-show="thArrow(predicate.value, '-starts_at')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th>
        <a href="" ng-click="predicate.value = '-sub_last_name'; reverse=!reverse">
          Employee Sub
        </a>
        <span ng-show="thArrow(predicate.value, '-sub_last_name')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th>
        <a href="" ng-click="predicate.value = '-approved'; reverse=!reverse">
          Status
        </a>
        <span ng-show="thArrow(predicate.value, '-approved')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th class='hidden-xs'>
        <a href="" ng-click="predicate.value = '-processed_on'; reverse=!reverse">
          Processed
        </a>
        <span ng-show="thArrow(predicate.value, '-processed_on')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th class='hidden-xs'>
        <a href="" ng-click="predicate.value = '-processed_by_last_name'; reverse=!reverse">
          Processed By
        </a>
        <span ng-show="thArrow(predicate.value, '-processed_by_last_name')">
          <dq-arrow></dq-arrow>
        </span>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat='request in mySubRequests | orderBy:predicate.value:reverse | filter:locationFilter | filter:search'>
      <td class='hidden-xs'>{{request.shift.position.name}}</td>
      <td class='hidden-xs'>
        {{request.shift.start_time | date:'M/d/yy'}}
      </td>
      <td class='hidden-xs'>
        {{request.shift.start_time | date:'h:mm'}}-{{request.shift.end_time | date:'h:mm a'}}
      </td>
      <td class='visible-xs'>
        {{request.shift.start_time | date:'h:mm'}}-{{request.shift.end_time | date:'h:mm a M/d/yy '}}
      </td>
      <td>
        <a ng-hide='checkActive(request)' ng-href='/users/{{request.sub_user_id.id}}'>
          {{request.sub_last_name}}, {{request.sub_first_name}}
        </a>
      </td>
      <td ng-class='cssClass(request)'>
        <div ng-hide='checkActive(request)' %>
        {{request.approved | booleanToWordsTimeOff}}
        </div>
        <div ng-show='checkActive(request)' %>
        Pending
        </div>
      </td>
      <td class='hidden-xs'>{{request.processed_on | date:'M/d/yy'}}</td>
      <td class='hidden-xs'>
        <a ng-hide='checkActive(request)' ng-href='/users/{{request.processed_by_user_id}}'>
          {{request.processed_by_last_name}}, {{request.processed_by_first_name}}
        </a>
      </td>
      <td>
        <%= link_to 'View Request', "/sub_requests/{{request.id}}",
          class: 'btn btn-info btn-xs', role: 'button' %>
      </td>
    </tr>
  </tbody>
</table>

