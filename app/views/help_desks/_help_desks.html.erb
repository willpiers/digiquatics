<div ng-show='(helpDesks | orderBy:order.value:order.reverse | filter:locationFilter | filter:search).length'>
  <table class='table table-hover' >
    <thead>
      <tr>
        <th></th>
        <th class='hidden-xs'>
          <a href="" ng-click="predicate.value = '-location.name'; reverse=!reverse">
          Location</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = '-created_at'; reverse=!reverse">
          Date</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = '-name'; reverse=!reverse">
          Problem</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = '-urgency'; reverse=!reverse">
          Urgency</a>
        </th>
        <th class='hidden-xs'>
          <a href="" ng-click="predicate.value = '-user.last_name'; reverse=!reverse">
          Submitted By</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat='item in helpDesks | orderBy:predicate.value:reverse | filter:locationFilter | filter:search'>
        <td>
          <div ng-show='showPic(item)' %>
            <a ng-href='{{item.attachment_url}}'>
            <span class='glyphicon glyphicon-picture'></span>
          </div>
        </td>
        <td class='hidden-xs'>{{item.location.name}}</td>
        <td>{{item.created_at | date:'M/d/yy h:mm a'}}</td>
        <td>
          <a ng-href='/help_desks/{{item.id}}'>
            {{item.name}}
          </a>
        </td>
        <td ng-class='cssClass(item)'>{{item.urgency}}</td>
        <td class='hidden-xs'>
          <a ng-href='/users/{{item.user.id}}'>
            {{item.user.last_name}}, {{item.user.first_name}}
          </a>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div ng-hide='(helpDesks | orderBy:order.value:order.reverse | filter:locationFilter | filter:search).length'>
  <hr>
  <center>
    <p>
      No open issues match this search or you have none yet.
        <%= link_to 'Click here to add an issue.',
            new_help_desk_path %>
    </p>
  </center>
</div>
