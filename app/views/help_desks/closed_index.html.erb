<div ng-app='digiquatics'>
  <div ng-controller='ClosedHelpDesksCtrl'>
    <% provide(:title, 'Open Issues') %>
    <h1>Closed Issues</h1>
    <br><br>
    <div class='row'>
      <div class='col-md-2'>
        <div class="input-group">
          <input class="form-control" ng-model="search" type='text'placeholder="Search"/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
        </div>
      </div>
      <div class='col-md-3'>
        <select ng-model='locationFilter' class='form-control'>
          <option value=''>All Locations</option>
          <option ng-repeat='location in locations' value='{{location.name}}'>{{location.name}}</option>
        </select>
      </div>
      <div class='col-md-5'></div>
      <div class='col-md-2'>
        <div class='btn-group'>
            <%= link_to 'View Open', help_desks_path,
            class: 'btn btn-danger btn-sm', role: 'button' %>
        </div>
      </div>
    </div>
    <br>
    <%= render 'closed' %>
  </div>
</div>
