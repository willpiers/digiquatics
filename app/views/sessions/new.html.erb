<% provide(:title, "Sign in") %>

<br><br><br>

<div class="row well">
  <div class="userform">

<center>
<img src="/images/water.png" alt="red" height="100px" width="100px"/>
</center>

    <%= bootstrap_form_for :session, :url => signin_path do |f| %>
      <legend>Sign in</legend>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.primary "Sign in" %>
    <% end %>
    <div> Don't have an account? <a href="signup"> Sign up</a></div>
  </div>
</div>



