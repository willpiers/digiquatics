<label>Start Date *</label>

<div class='row'>
  <div class='hidden'>
    <%= render 'time_off_requests/form_elements/start_time' %>
  </div>
  <div class='col-md-12'>
     <%= render 'time_off_requests/form_elements/start_date' %>
  </div>
</div>

<%= f.hidden_field :starts_at,
                   value: "{{dt1 | date:'yyyy-MM-dd'}}
                           {{mytime1 | date:'HH:mm:ss Z' }}" %>

