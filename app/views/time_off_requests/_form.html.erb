<div ng-app='digiquatics' ng-controller='TimeOffCtrl'
     class='userform well shadow-effect'>
  <%= bootstrap_form_for(@time_off_request) do |f| %>
    <%= render 'shared/required' %>
    <div class='center'>
      <div class='btn-group'>
        <label class='btn btn-info' ng-model='requestMode' btn-radio="'partialDay'">
          Partial Day
        </label>
        <label class='btn btn-info' ng-model='requestMode' btn-radio="'allDay'">
          All Day
        </label>
      </div>
    </div>
    <div ng-if='allDayRequestMode()'>
      <%= render 'time_off_requests/show/all_day', f: f %>
    </div>
    <div ng-if='partialDayRequestMode()'>
      <%= render 'time_off_requests/show/partial_day', f: f %>
    </div>
    <%= f.text_area :reason, label: 'Reason' %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :location_id, value: current_user.location_id %>
    <button type='submit' class='btn btn-block btn-primary'>
      <i class='fa fa-refresh fa-lg'></i> Update Request
    </button>
    <%= link_to @time_off_request, method: :delete,
        class: 'btn btn-danger btn-block',
        data: { confirm: 'Are you sure?' } do %>
        <i class='fa fa-trash-o fa-lg'></i> Delete Request
    <% end %>
  <% end %>
</div>
</div>
