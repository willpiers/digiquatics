<div class='table-responsive'>
  <table class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th>Location</th>
        <th>Pool</th>
        <th>
          <a href='' ng-click="predicate.value = 'free_chlorine_ppm'; reverse=!reverse">
            Free Cl
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'combined_chlorine_ppm'; reverse=!reverse">
            Combined Cl
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'total_chlorine_ppm'; reverse=!reverse">
            Total Cl
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'ph'; reverse=!reverse">
            PH
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'alkalinity'; reverse=!reverse">
            Alk
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'calcium_hardness'; reverse=!reverse">
            CH
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'pool_temp'; reverse=!reverse">
            Pool(F)
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'air_temp'; reverse=!reverse">
            Air(F)
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'water_clarity'; reverse=!reverse">
            Water Clarity
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'si_index'; reverse=!reverse">
            SI Index
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'si_status'; reverse=!reverse">
            SI Status
          </a>
        </th>
        <th>
          <a href='' ng-click="predicate.value = 'time_stamp'; reverse=!reverse">
            Date
          </a>
        </th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat='record in chemicalRecords | orderBy:predicate.value:reverse
        | filter:{pool_id: filters.pool_id}
        | filter:{pool: {location_id: filters.location_id}}'>
        <td>{{record.pool.location.name}}</td>
        <td>{{record.pool.name}}</td>
        <td>{{record.free_chlorine_ppm}}</td>
        <td>{{record.combined_chlorine_ppm}}</td>
        <td>{{record.total_chlorine_ppm}}</td>
        <td>{{record.ph}}</td>
        <td>{{record.alkalinity}}</td>
        <td>{{record.calcium_hardness}}</td>
        <td>{{record.pool_temp}}</td>
        <td>{{record.air_temp}}</td>
        <td>{{record.water_clarity}}</td>
        <td>{{record.si_index}}</td>
        <td>{{record.si_status}}</td>
        <td>
          <a ng-href='{{record.url}}'>
            {{record.time_stamp | formatTime}}
          </a>
        </td>
      </tr>
    </tbody>
  </table>
</div>
