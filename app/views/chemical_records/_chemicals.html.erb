<div ng-app='digiquatics' class='table-responsive'>
  <table ng-controller='ChemicalRecordsCtrl'
    class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th>Cl</th>
        <th>PH</th>
        <th>Alk</th>
        <th>CH</th>
        <th>Pool(F)</th>
        <th class='hidden-xs hidden-sm'>Air(F)</th>
        <th class='hidden-xs hidden-sm'>SI Index</th>
        <th class='hidden-xs hidden-sm'>SI Status</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
    </thead>

    <tbody>
      <tr ng-repeat='record in chemical_records | orderBy:sorter.value | filter:poolFilter'>
        <td>{{record.chlorine_ppm}}</td>
        <td>{{record.ph}}</td>
        <td>{{record.alkalinity}}</td>
        <td>{{record.calcium_hardness}}</td>
        <td>{{record.pool_temp}}</td>
        <td>{{record.air_temp}}</td>
        <td>{{record.si_index}}</td>
        <td>{{record.si_status}}</td>
        <td>
          <a ng-href='/chemical_records/{{record.id}}'>
            {{record.date_stamp}}
          </a>
        </td>
        <td>{{record.time_stamp}}</td>
      </tr>
    </tbody>
  </table>
</div>
