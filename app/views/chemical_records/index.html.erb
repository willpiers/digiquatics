<% provide(:title, 'Chemical Records') %>
<h1>Chemical Records</h1>

<div class='row'>

  <div class='col-md-9'></div>

  <div class='col-md-3'>
    <br><br>
    <div class='btn-group'>
      <%= link_to 'Add Record', new_chemical_record_path,
        class: 'btn btn-primary btn-sm', role: 'button' %>
      <%= link_to 'Statistics', chemical_record_stats_path,
        class: 'btn btn-success btn-sm', role: 'button' %>
    </div>
  </div>
</div>

<div style="font-size: 60%">
  <br>
    <p> SI Index Legend :
      <br>
      <img src="/images/reddot.png" alt="red" height="10px" width="10px" /> = Greater than 0.7 or less than -0.7
      <img src="/images/yellowdot.png" alt="yellow" height="10px" width="10px" /> = Between 0.3 and 0.7 or -0.3 and -0.7
      <img src="/images/greendot.png" alt="green" height="10px" width="10px" /> = Within +-0.3
   </p>
</div>

<br>

<%= render 'chemicals' %>
