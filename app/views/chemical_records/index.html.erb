<div ng-app='digiquatics'>
  <div ng-controller='ChemicalRecordsCtrl'>
    <% provide(:title, 'Chemical Records') %>
    <h1 class='cross_platform_header'>Chemical Records</h1>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'layouts/location_select_chemicals' %>
      </div>
      <div class='col-md-3'>
        <%= render 'layouts/pool_select' %>
      </div>
      <div class='col-md-3'></div>
      <div class='col-md-3 pull-right'>
        <div class='btn-group pull-right'>
          <%= link_to new_chemical_record_path,
              class:'btn btn-sm btn-primary' do %>
            <i class='fa fa-plus fa-lg'></i> Add Record
          <% end %>
          <%= link_to chemical_record_stats_path,
              class:'btn btn-sm btn-success' do %>
            <i class='fa fa-bar-chart-o fa-lg'></i> Analytics
          <% end %>
        </div>
      </div>
    </div>
    <div class='hidden-xs'>
      <br>
      <img src='/images/reddot.png' alt='red' height='10px' width='10px'/>
      Danger
      <img src='/images/yellowdot.png' alt='yellow' height='10px' width='10px'/>
      Warning
      <img src='/images/greendot.png' alt='green' height='10px' width='10px'/>
      Balanced
    </div>
    <%= render 'chemicals' %>
  </div>
</div>
