<% provide(:title, 'Chemical Record') %>
<p id='notice'><%= notice %></p>

<h1><%='Chemical Record'%></h1>

<div id='userformbutton'>
<%=link_to 'Edit Record', edit_chemical_record_path(@chemical_record),
    class: 'btn btn-primary btn-sm'%>
</div>

<br> <br>

<div class='table-responsive'>

  <table class='table table-bordered table-condensed'>
      <tr>
        <th id='fixtablewidth'>Location</th>
        <td><%=%></td>
      </tr>
      <tr>
        <th>Pool</th>
        <td><%=%></td>
      </tr>
      <tr>
        <th>Chlorine(ppm)</th>
        <td><%= @chemical_record.chlorine_ppm%></td>
      </tr>
      <tr>
        <th> Chlorine(orp)</th>
        <td><%= @chemical_record.chlorine_orp%></td>
      </tr>
      <tr>
        <th>PH</th>
        <td><%= @chemical_record.ph%> </td>
      </tr>
      <tr>
        <th>Alkalinity</th>
        <td><%= @chemical_record.alkalinity%></td>
      </tr>
      <tr>
        <th>Calcium Hardness</th>
        <td><%= @chemical_record.calcium_hardness%></td>
      </tr>
    <tr>
      <th>Pool Temp</th>
      <td><%= @chemical_record.pool_temp%></td>
    </tr>
    <tr>
      <th>Air Temp</th>
      <td><%= @chemical_record.air_temp%></td>
    </tr>
    <tr>
      <th>SI Index</th>
      <td><%= @chemical_record.si_index%></td>
    </tr>
    <tr>
      <th>SI Status</th>
      <td><%= @chemical_record.si_status %></td>
    </tr>
    <tr>
      <th>SI Recommendation</th>
      <td><%= @chemical_record.si_recommendation %></td>
    </tr>
    <tr>
      <th>Submitted By</th>
        <td>
          <% if @chemical_record.user_id? %>
          <p> <%= User.find(@chemical_record.user_id).first_name %> </p>
          <p> <%= User.find(@chemical_record.user_id).last_name %> </p>
          <% else %>
          <% end %>
        </td>
    </tr>
    <tr>
      <th>Time Created</th>
      <td><%= @chemical_record.time_stamp.strftime("%I:%M%p")%></td>
    </tr>
  </table>
</div>
