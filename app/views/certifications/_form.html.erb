<%= bootstrap_form_for(@certification,
  style: :horizontal, left: "col-sm-4", right: "col-sm-8") do |f| %>
  <% if @certification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@certification.errors.count, "error") %>
        prohibited this certification from being saved:</h2>

      <ul>
        <% @certification.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.number_field :certification_name_id %>
    <%= f.number_field :user_id %>
    <%= f.text_field :expiration_date,
      label: 'Expiration date (Ex. dd-mm-yyyy)' %>
    <%= f.file_field :attachment %>

    <%= f.form_group do %>
      <%= f.submit %>
    <% end %>
<% end %>
