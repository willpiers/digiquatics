<div class = 'navbar navbar-inverse navbar-static-top'>
  <div class = 'container'>
    <button class = 'navbar-toggle' data-toggle = 'collapse'
    data-target = '.navHeaderCollapse'>
      <span class = 'icon-bar'></span>
      <span class = 'icon-bar'></span>
      <span class = 'icon-bar'></span>
    </button>
    <a id='logoimage' class='float:left'>
      <img src='/images/water.png' alt='red' height='40px' width='40px'/>
    </a>
    <% if signed_in? %>
      <%= link_to 'DigiQuatics', dashboard_path, id: 'logo' %>
    <% end %>
    <div class = 'collapse navbar-collapse navHeaderCollapse'>
      <ul class = 'nav navbar-nav navbar-right' >
        <% if signed_in? %>
          <% if FeatureToggleHelper.attendance? %>
            <li><%= link_to 'Attendance', attendance_records_path %></li>
          <% end %>
          <% if FeatureToggleHelper.chemicals? %>
            <li><%= link_to 'Chemicals', chemical_records_path %></li>
          <% end %>
          <li><%= link_to 'Certifications', certifications_path %></li>

          <% if FeatureToggleHelper.private_lessons? %>
            <li class = 'dropdown'>
              <a href = '#' class = 'dropdown-toggle' data-toggle = 'dropdown'>
              Private Lessons <b class = 'caret'></b></a>
              <ul class = 'dropdown-menu'>
                <li>
                  <li><%= link_to 'My Private Lessons', my_lessons_path %></li>
                  <li><%= link_to 'Private Lessons Queue',
                      account_private_lessons_path(account_id: current_user.account_id) %>
                </li>
                <% if current_user && current_user.admin? %>
                  <li class='divider'></li>
                  <li><%= link_to 'New Private Lesson',
                          new_account_private_lesson_path(account_id: current_account.id) %>
                  </li>
                  <li><%= link_to 'Admin Private Lessons Queue', admin_index_path %></li>
                <% end %>
              </ul>
          <% end %>

          <% if current_user.admin? %>
            <li><%= link_to 'Users', users_path %></li>
          <% end %>
        <% if FeatureToggleHelper.maintenance? %>
          <li class = 'dropdown'>
            <a href = '#' class = 'dropdown-toggle' data-toggle = 'dropdown'>
              Maintenance<b class = 'caret'></b></a>
            <ul class = 'dropdown-menu'>
              <li><%= link_to 'Daily Checklist', daily_todos_path %></li>
              <li><%= link_to 'Preventative Maintenance',
                              preventative_lists_path %></li>
              <li><%= link_to 'Report an Issue', help_desks_path %></li>
            </ul>
          </li>
        <% end %>
        <% if FeatureToggleHelper.shift_reports? %>
          <li><%= link_to 'Shift Reports', shift_reports_path %></li>
        <% end %>
        <li class = 'dropdown'>
          <a href = '#' class = 'dropdown-toggle' data-toggle = 'dropdown'>
            Account<b class = 'caret'></b></a>
          <ul class = 'dropdown-menu'>
            <li><%= link_to 'My Profile', current_user %></li>
            <% if current_user && current_user.admin? %>
              <li class='divider'></li>
              <!--<li><%= link_to 'Manage Users', users_path %></li>-->
              <li><%= link_to 'Admin Dashboard', admin_dashboard_path %></li>
            <% end %>
            <li class='divider'></li>
            <li><%= link_to 'Sign out', destroy_user_session_path,
              method: :delete %></li>
          </ul>
        </li>
        <% else #!signed_in? %>
          <li>
            <div>
              <%= link_to 'Sign In',
                          new_user_session_path,
                          class: 'btn btn-primary btn-default fixbtn' %>
          </div>
          </li>
          <li>
            <div>
              <%= link_to 'Sign Up',
                          new_user_path,
                          class: 'btn btn-success btn-default fixbtn' %>
          </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
