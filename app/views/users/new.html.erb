<% provide(:title, 'Create New User') %>
<h1>Create New User</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :sex %>
      <%= f.select :sex, options_for_select(%w[Male Female]) %>

      <%= f.label :suit_size %>
      <%= f.select :suit_size, options_for_select(%w[XS S M L XL XXL]) %>

      <%= f.label :shirt_size %>
      <%= f.select :shirt_size, options_for_select(%w[XS S M L XL XXL]) %>

      <%= f.label :date_of_birth %>
      <%= f.text_field :date_of_birth %>

      <%= f.label :date_of_hire %>
      <%= f.text_field :date_of_hire %>

      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number %>
      <br>
      <br>
      <br>
      <center>
      <%= f.submit "Create/Save Account", class: "btn btn-medium btn-primary" %></center>
    <% end %>
  </div>
</div>
