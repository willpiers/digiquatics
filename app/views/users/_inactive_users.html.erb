<div ng-app='digiquatics' class='table-responsive'>
  <table ng-controller='InactiveUsersCtrl' class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th>
          <a href="" ng-click="predicate.value = 'last_name'; reverse=!reverse">
          Last Name</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'first_name'; reverse=!reverse">
          First Name</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'employee_id'; reverse=!reverse">
          ID</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'date_of_birth'; reverse=!reverse">
          DOB</a>
        </th>
        <th>Location</th>
        <th>
          <a href="" ng-click="predicate.value = 'position.name'; reverse=!reverse">
          Position</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'email'; reverse=!reverse">
          Email</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'phone_number'; reverse=!reverse">
          Phone</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'admin'; reverse=!reverse">
          Admin</a>
        </th>
        <th>
          <a href="" ng-click="predicate.value = 'active'; reverse=!reverse">
          Active</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat='user in inactive_users | orderBy:predicate.value:reverse | filter:locationFilter | filter:search'>
        <td>
          <a ng-href='/users/{{user.id}}'>
            {{user.last_name}}
          </a>
        </td>
        <td>{{user.first_name}}</td>
        <td>{{user.employee_id}}</td>
        <td>{{user.date_of_birth | age}}</td>
        <td>{{user.location.name}}</td>
        <td>{{user.position.name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.phone_number}}</td>
        <td>{{user.admin | booleanToWords}}</td>
        <td>{{user.active | booleanToWords}}</td>
      </tr>
    </tbody>
  </table>
</div>
