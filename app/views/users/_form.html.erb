<div class='userform well'>
  <%= bootstrap_form_for(@user,
    style: :horizontal, left: 'col-sm-4', right: 'col-sm-8') do |f| %>
    <legend><%= legend %></legend>
    <p> * Indicates required field </p>
    <div><%= render 'basic_user_fields', f: f %></div>

    <% unless f.object.new_record? %>
      <div><%= render 'additional_user_fields', { f: f, user: @user } %></div>

      <% if signed_in? && current_user.admin? %>
        <div><%= render 'admin_fields', f: f %></div>
      <% end %>
    <% end %>

    <%= f.primary(f.object.new_record? ?  'Create Account' : 'Save Changes') %>
  <% end %>
</div>
</div>
