<div ng-app='digiquatics'>
  <div ng-controller='UsersCtrl'>
    <% provide(:title, 'Active Employees') %>
    <h1 class='cross_platform_header'>Active Employees</h1>
    <div class='row'>
      <dq-search></dq-search>
      <%= render 'layouts/location_select' %>
      <div class='visible-xs'><br></div>
      <dq-location></dq-location>
      <div class='col-md-3'></div>
      <div class='col-md-4'>
        <% if signed_in? && current_user.admin? %>
          <div class='btn-group hidden-xs'>
            <%= link_to 'New Employee', new_user_path,
                        class: 'btn btn-primary btn-sm', role: 'button' %>
            <%= link_to 'Manage Inactive', inactive_index_path,
                        class: 'btn btn-danger btn-sm', role: 'button' %>
            <%= link_to 'Statistics', user_stats_path,
                        class: 'btn btn-success btn-sm', role: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class='hidden-xs'>
      <div><i class="fa fa-star star"></i> New Record</div>
    </div>
    <br>
    <%= render 'users' %>
  </div>
</div>
