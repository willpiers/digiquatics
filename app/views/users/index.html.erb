<div ng-app='aquaticsApp'>
  <div ng-controller='LocationsCtrl'>
    <% provide(:title, 'Users') %>
    <h1>Users</h1>

    <div class='row'>
      <div id='searchbox' class='col-md-1'>
        <%= form_tag users_path, method: 'get', id: 'users_search' do %>
          <%= text_field_tag :search, params[:search]%>
          <%= submit_tag 'Search', name: nil, class:'btn btn-default btn-sm' %>
        <% end %>
      </div>

      <div class='col-md-2'>
        Filter locations:
        <select ng-model='filter_location'>
          <option ng-repeat='location in locations' value='{{location.name}}'>{{location.name}}</option>
        </select>
      </div>

      <div class='col-md-5'>
        <div class='btn-group'>
          <%= link_to 'Manage Inactive', inactive_index_path, class: 'btn btn-danger btn-sm', role: 'button' %>
          <%= link_to 'Add User', signup_path, class: 'btn btn-primary btn-sm', role: 'button' %>
          <%= link_to 'Export CSV', users_path(format: 'csv'), class: 'btn btn-warning btn-sm', role: 'button' %>
          <%= link_to 'Statistics', user_stats_path, class: 'btn btn-success btn-sm', role: 'button' %>
        </div>
      </div>


    </div>

    <br>
    <%= render 'users' %>

  </div>
</div>
