<div ng-app='digiquatics' class='table-responsive'>
  <table ng-controller='CertificationsCtrl' class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th ng-click='sorter.value="lastName"'>Last Name</th>
        <th ng-click='sorter.value="firstName"'>First Name</th>
        <th>ID</th>
        <th>Age</th>
        <th ng-click='sorter.value="location"'>Location</th>
        <th>Position</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Admin</th>
        <th>Active</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat='userData in users | orderBy:sorter.value | filter:locationFilter | filter:search'>
        <td>
          <a ng-href='/users/{{userData.id}}'>{{userData.lastName}}</a>
        </td>
        <td>{{userData.firstName}}</td>
        <td>{{userData.employee_id}}</td>
        <td>{{userData.date_of_birth | age}}</td>
        <td>{{userData.location}}</td>
        <td>{{userData.position}}</td>
        <td>{{userData.email}}</td>
        <td>{{userData.phone_number}}</td>
        <td>{{userData.admin | booleanToWords}}</td>
        <td>{{userData.active | booleanToWords}}</td>
      </tr>
    </tbody>
  </table>
</div>
