<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class='table-responsive'>
  <table class='table table-hover table-condensed' >
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>ID</th>
      <th>Age</th>
      <th>Location</th>
      <th>Position</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Admin</th>
      <th>Active</th>
    </tr>
    <tr ng-repeat='user in users | filter:locationFilter | filter:search'>
      <td>
        <a ng-href='/users/{{user.id}}'>{{user.last_name}}</a>
      </td>
      <td>{{user.first_name}}</td>
      <td>{{user.employee_id}}</td>
      <td>{{user.date_of_birth | age}}</td>
      <td>{{user.location.name}}</td>
      <td>{{user.position.name}}</td>
      <td>{{user.email}}</td>
      <td>{{user.phone_number}}</td>
      <td>{{user.admin | booleanToWords}}</td>
      <td>{{user.active | booleanToWords}}</td>
    </tr>
  </table>
</div>
