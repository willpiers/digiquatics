<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class='table-responsive'>
  <table class='table table-hover table-condensed' >
    <tr>
      <th><%= sortable 'last_name', 'Last Name'%></th>
      <th><%= sortable 'first_name', 'First Name'%></th>
      <th><%= sortable 'employee_id', 'ID'%></th>
      <th><%= sortable 'date_of_birth', 'Age'%></th>
      <th><%= sortable 'location_id', 'Location' %></th>
      <th><%= sortable 'position_id', 'Position'%></th>
      <th><%= sortable 'email', 'Email' %></th>
      <th><%= sortable 'phone_number', 'Phone'%></th>
      <th><%= sortable 'admin', 'Admin'%></th>
      <th><%= sortable 'active', 'Active'%></th>
    </tr>

    <tr ng-repeat='user in users'>
      <td>
        <a href='/users/{{user.id}}'>{{user.last_name}}</a>
      </td>
      <td>{{user.first_name}}</td>
      <td>{{user.employee_id}}</td>
      <td>{{user.date_of_birth | age}}</td>
    </tr>
