<div ng-app='digiquatics' class='table-responsive'>
  <table ng-controller='UsersCtrl' class='table table-hover table-condensed' >
    <thead>
      <tr>
        <th ng-click='sorter.value="lastName"'>Last Name</th>
        <th>First Name</th>
        <th>ID</th>
        <th>Age</th>
        <th>Location</th>
        <th>Position</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Admin</th>
        <th>Active</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat='user in users | orderBy:sorter.value | filter:locationFilter | filter:search'>
        <td>
          <a ng-href='/users/{{user.id}}'>{{user.last_name}}</a>
        </td>
        <td>{{user.first_name}}</td>
        <td>{{user.employee_id}}</td>
        <td>{{user.date_of_birth | age}}</td>
        <td>{{user.location.name}}</td>
        <td>{{user.position.name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.phone_number}}</td>
        <td>{{user.admin | booleanToWords}}</td>
        <td>{{user.active | booleanToWords}}</td>
      </tr>
    </tbody>
  </table>
</div>
