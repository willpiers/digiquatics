<div ng-app='digiquatics'>
  <div ng-controller='LocationsCtrl'>
    <% provide(:title, 'Inactive Employees') %>
    <h1 class='cross_platform_header'>Inactive Employees</h1>
    <br><br>
    <div class='row'>
      <dq-search></dq-search>
      <dq-location></dq-location>
      <div class='col-md-3'></div>
      <div class='col-md-4 pull-right'>
        <div class='btn-group'>
          <%= link_to 'Add Employee', new_user_path,
              class: 'btn btn-primary btn-sm', role: 'button' %>
          <%= link_to 'Manage Active', users_path,
              class: 'btn btn-danger btn-sm', role: 'button' %>
          <%= link_to 'Statistics', user_stats_path,
              class: 'btn btn-success btn-sm', role: 'button' %>
        </div>
      </div>
    </div>
    <br>
    <%= render 'inactive_users' %>
  </div>
</div>
