<table class='table table-hover table-condensed' >
  <thead>
    <tr>
      <th>
        Slide
      </th>
      <th>
        Completed By
      </th>
      <th>
        Date
      </th>
      <th>
        All OK?
      </th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat='inspection in slideInspections | orderBy:predicate.value:reverse'>
      <td>{{inspection.slide.name}}</td>
      <td>
        <a ng-href='/users/{{inspection.user.id}}'>
          {{inspection.user.last_name}}, {{inspection.user.first_name}}
        </a>
      </td>
      <td>
        <a ng-href='/slide_inspections/{{inspection.id}}'>
          {{inspection.created_at | date:'M/d/yy h:mm a'}}
        </a>
      </td>
      <td>{{inspection.all_ok | booleanToWords}}</td>
    </tr>
  </tbody>
</table>

