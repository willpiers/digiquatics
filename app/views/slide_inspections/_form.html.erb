<%= bootstrap_form_for(@slide_inspection, style: :horizontal, left: "col-sm-4", right: "col-sm-8") do |f| %>
  <% if @slide_inspection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slide_inspection.errors.count, "error") %>
        prohibited this slide inspection from being saved:</h2>
      <ul>
      <% @slide_inspection.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.select :slide_id,
      options_from_collection_for_select(Slide.all, :id, :name ) %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
